# ===========================================
# TAMARA Environment Variables
# ===========================================
# Copy this file to .env and configure your values
# NEVER commit the .env file to git

# MariaDB Database
TAMARA_DB_HOST=localhost
TAMARA_DB_PORT=3306
TAMARA_DB_USER=tamara_user
TAMARA_DB_PASSWORD=your_password_here
TAMARA_DB_NAME=tamara_db

# Optional: allow write operations (default: false)
# TAMARA_DB_ALLOW_WRITE=false

# Optional: alternative LLM model
# TAMARA_LLM_MODEL=gpt-oss:20b
